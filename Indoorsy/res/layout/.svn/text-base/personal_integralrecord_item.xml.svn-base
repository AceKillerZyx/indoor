<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/integralRecordItemLinearLayout"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/integralRecordItemDetailTextView"
        style="@style/commonText"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="@dimen/common_padding" />

    <View
        style="@style/commonGreyLineView"
        android:layout_width="0.1dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/integralRecordItemNumberTextView"
        style="@style/commonText"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/common_padding" />

    <View
        style="@style/commonGreyLineView"
        android:layout_width="0.1dp"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/integralRecordItemTimeTextView"
        style="@style/commonText"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:padding="@dimen/common_padding"/>

</LinearLayout>