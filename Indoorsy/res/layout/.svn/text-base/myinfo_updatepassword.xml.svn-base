<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    
    <com.indoorsy.frash.common.view.CustomTitleView
        android:id="@+id/customTitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        	android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_edit_linearlayout_height"
            android:background="@drawable/myinfo_linearlayout_solidcolor2"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/myinfoUpdateOldPasswordEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/myingo_update_inputoldpwd_hint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/myinfo_grey_text"
                android:textSize="@dimen/common_edit_hint_text_size" >

                <requestFocus />
            </EditText>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_edit_linearlayout_height"
            android:background="@drawable/myinfo_linearlayout_solidcolor2"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/myinfoUpdateNewPasswordEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/myingo_update_inputnewpwd_hint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/myinfo_grey_text"
                android:textSize="@dimen/common_edit_hint_text_size" >

                <requestFocus />
            </EditText>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_edit_linearlayout_height"
            android:background="@drawable/myinfo_linearlayout_solidcolor2"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/myinfoUpdateNew2PasswordEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/myingo_update_inputnew2pwd_hint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/myinfo_grey_text"
                android:textSize="@dimen/common_edit_hint_text_size" >

                <requestFocus />
            </EditText>
    </LinearLayout>
    
    <Button
        	android:layout_margin="@dimen/common_margin"
            android:id="@+id/myinfoUpdatePwdButton"
            style="@style/commonButton"
            android:layout_marginTop="@dimen/myinfo_login_button_margin_top"
            android:text="@string/myinfo_updatepwdButton" />
    

</LinearLayout>
