<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <com.indoorsy.frash.common.view.CustomTitleView
        android:id="@+id/customTitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/evaluationImageView"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/evaluationNameTextView"
                            style="@style/commonText"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="#404040"
                            android:textSize="@dimen/homepage_textsize_14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/commonText"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/personal_fragment_myorder_evaluation_amounts"
                                android:textColor="@color/homepage_gray_text"
                                android:textSize="@dimen/homepage_textsize_14" />

                            <TextView
                                android:id="@+id/evaluationPriceTextView"
                                style="@style/commonText"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/homepage_green_money"
                                android:textSize="@dimen/homepage_textsize_14" />

                            <TextView
                                style="@style/commonText"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="@string/personal_fragment_myorder_yuan"
                                android:textColor="@color/homepage_gray_text"
                                android:textSize="@dimen/homepage_textsize_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="bottom|right"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/evaluationTextView"
                            style="@style/commonText"
                            android:layout_marginTop="10dp"
                            android:background="#E87435"
                            android:gravity="center"
                            android:padding="@dimen/homepage_padding_5"
                            android:text="@string/personal_fragment_myorder_evaluation"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/homepage_textsize_14" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/commonText"
                        android:text="@string/personal_myorder_evaluation_product_quality" />

                    <RatingBar
                        android:id="@+id/evaluationProductQualityRatingBar"
                        style="@style/evaluationRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:numStars="5"
                        android:stepSize="1" />
                </LinearLayout>

                <View
                    style="@style/commonGreyLineView"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/commonText"
                        android:text="@string/personal_myorder_evaluation_product_quantity" />

                    <RatingBar
                        android:id="@+id/evaluationProductQuantityRatingBar"
                        style="@style/evaluationRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:numStars="5"
                        android:stepSize="1" />
                </LinearLayout>

                <View
                    style="@style/commonGreyLineView"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/commonText"
                        android:text="@string/personal_myorder_evaluation_delivery_speed" />

                    <RatingBar
                        android:id="@+id/evaluationDeliverySpeedRatingBar"
                        style="@style/evaluationRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:numStars="5"
                        android:stepSize="1" />
                </LinearLayout>

                <View
                    style="@style/commonGreyLineView"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        style="@style/commonText"
                        android:text="@string/personal_myorder_evaluation_service_attitude" />

                    <RatingBar
                        android:id="@+id/evaluationServiceAttitudeRatingBar"
                        style="@style/evaluationRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:numStars="5"
                        android:stepSize="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/evaluationContentEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:gravity="left|top"
                    android:hint="@string/personal_myorder_evaluation_content_hint"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:padding="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/evaluationOneImageView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/personal_evaluation"
                        android:contentDescription="@string/app_name" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/evaluationTwoImageView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/personal_evaluation"
                        android:contentDescription="@string/app_name" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/evaluationThreeImageView"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/personal_evaluation"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>